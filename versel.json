{
    "version": 1,
    "builds": [
        {
            "src": "pritistore/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            },
            "cmd": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "static"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "pritistore/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "index.html"
        }
    ],
    "outputDirectory": "static"
}